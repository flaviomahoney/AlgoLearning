<div class="container mt-3 w-50">
  <div class="container w-75 mb-3">
    <% if @course.photo.attached? %>
      <div class="card-category-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag @course.photo.key %>")>
    <% else %>
      <div class="card-category-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1557318041-1ce374d55ebf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80)">
    <% end %>
    <%= @course.name %>
    </div>
  </div>

  <p><%= @course.description %></p>
  <p><strong>Category: </strong><%= @course.category %></p>
  <p><strong>Difficulty: </strong><%= @course.difficulty %></p>

  <% if policy(Course).create? %>
    <%= link_to "Update", edit_course_path(@course), class: "card-tag" %>
  <% end %>

  <% if policy(Course).create? %>
    <%= link_to course_path(@course), class: "card-tag", method: :delete, data: { confirm: 'Are you sure?' } do %>
          Remove <i class="fas fa-trash"></i>
        <% end %>
  <% end %>

</div>
