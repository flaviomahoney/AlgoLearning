<div class="navbar navbar-expand-lg navbar-light bg-light">
    <ul class="navbar-nav">
      <li class="nav-item active">
				<strong><%= link_to "Lecture", lecture_course_path(@course) , class: "nav-link nav-link-dark" %></strong>
      </li>
      <li class="nav-item">
				<%= link_to "Exercise", code_course_path(@course) , class: "nav-link nav-link-grey" %>
      </li>
			<li class="nav-item">
				<%= link_to "Hint", video_course_path(@course) , class: "nav-link nav-link-grey" %>
      </li>
    </ul>
</div>

<div class="m-4 d-flex justify-content-between">
  <div class="text-justify">
  <%= @course.body %>
  </div>
  <% if @course.images.any? %>
    <div class="card-carousel-vis my-3 ml-4 ">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @course.images.each_with_index do |image, index| %>
            <% css_class = "carousel-item text-center active" if index == 0 %>
            <% css_class ||= "carousel-item text-center" %>
            <div class="<%= css_class %>">
              <%= cl_image_tag image.key, class: "flex-column" %>
            </div>  
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <div class="carousel-arrow-box">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </div>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <div class="carousel-arrow-box">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </div>
        </a>
      </div>
    </div>
  <% end %>
</div>
