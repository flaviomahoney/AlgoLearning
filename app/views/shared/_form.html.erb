<div class="container">
	<%= form_with model: @course, local: true do |form| %>

		<div class="form-inputs">
			<%= form.label :name %><br>
			<%= form.text_field :name, class: "form" %><br>
			<%= form.label :photo %><br>
			<%= form.file_field :photo %><br>
			<%= form.label :images %><br>
			<%= form.file_field :images, multiple: true %><br>
			<%= form.label :description %><br>
			<%= form.text_field :description, class: "form" %><br>
			<%= form.label :short_description %><br>
			<%= form.text_field :short_description, class: "form" %><br>
			<%= form.label :Lecture %><br>
			<div class="lecture">
				<%= form.rich_text_area :body, class: "action-text" %>			
			</div><br>
			<%= form.label :video %><br>
			<%= form.text_field :video, class: "form" %><br>
			<%= form.label :category %><br>
			<%= form.text_field :category, class: "form" %><br>
			<%= form.label :difficulty %><br>
			<%= form.text_field :difficulty, class: "form" %><br>
			<%= form.label :tag_list, label: "Add tags", hint: "Add your tags, separated by commas" %><br>
			<%= form.text_field :tag_list %>
		</div><br>

		<div class="form-actions">
			<%= form.submit%>
		</div>
	<% end %>
</div>
