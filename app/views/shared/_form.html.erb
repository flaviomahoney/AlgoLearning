<div class="container">
	<%= simple_form_for(course) do |f| %>

		<div class="form-inputs">
			<%= f.input :name %>
			<%= f.input :photo, as: :file %>
			<%= f.input :description %>
			<%= f.input :lecture %>
			<%= f.input :code %>
			<%= f.input :video %>
			<%= f.input :category %>
			<%= f.input :difficulty %>
		</div>

		<div class="form-actions">
			<%= f.button :submit , class: "btn btn-primary"%>
		</div>
	<% end %>
</div>